@model List<RiceShop.Models.Category>
@{
    ViewData["Title"] = "Home - Rice Shop";
}

<h1>Welcome to Rice Shop Bangladesh</h1>

<h2>Rice Categories</h2>
<div class="row">
    @foreach (var category in Model)
    {
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@category.Name</h5>
                    <p>Products: @category.Products.Count()</p>
                    <a href="@Url.Action("Products", "Home", new { categoryId = category.Id })" class="btn btn-primary">View Products</a>
                </div>
            </div>
        </div>
    }
</div>

<h2>Featured Products</h2>
<div class="row">
    @foreach (var product in Model.SelectMany(c => c.Products).Take(6))
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p><strong>Price:</strong> @string.Format(new System.Globalization.CultureInfo("bn-BD"), "{0:C}", product.Price)</p>
                    <a href="@Url.Action("ProductDetail", "Home", new { id = product.Id })" class="btn btn-success">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
