@model IEnumerable<RiceShop.Models.Product>
@{
    ViewData["Title"] = "Home";
}

<div class="py-4">
    <h2>Featured Products</h2>
    <div class="row row-cols-1 row-cols-md-3 g-3">
        @foreach (var p in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@(p.ImageUrl ?? "/images/placeholder.png")" class="card-img-top" style="height:180px;object-fit:cover" />
                    <div class="card-body">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text text-muted">@p.Category?.Name</p>
                        <p class="card-text">@p.Description</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <strong class="text-primary">৳@p.Price</strong>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
