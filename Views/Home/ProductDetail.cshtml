@model RiceShop.Models.Product
@{
    ViewData["Title"] = @Model.Name;
}

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" />
    </div>
    <div class="col-md-6">
        <h2>@Model.Name</h2>
        <p>@Model.Description</p>
        <p><strong>Category:</strong> @Model.Category.Name</p>
        <p><strong>Price:</strong> @string.Format(new System.Globalization.CultureInfo("bn-BD"), "{0:C}", Model.Price)</p>
        <p><strong>Available Quantity:</strong> @Model.Quantity</p>
        <button class="btn btn-success">Add to Cart</button>
    </div>
</div>
